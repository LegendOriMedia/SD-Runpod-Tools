{
  "manifest_version": 3,
  "name": "Ori's Runpod SD Helper",
  "version": "1.0",
  "description": "A helper extension for Stable Diffusion on Cloud Computers",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["clipboardWrite", "storage", "scripting", "activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["*://*/*library.html"],
      "js": ["library.js"]
    },
    {
      "matches": ["*://*/*popup.html"],
      "js": ["popup.js"]
    }
  ]
}
